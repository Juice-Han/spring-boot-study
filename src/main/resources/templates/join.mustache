<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>Join Page</title>
</head>
<body>
<div class="container mt-5">
    <h3>회원가입</h3>
    <form class="mt-3" action="/joinProc" method="post" name="joinForm">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        <div class="mb-3">
            {{#userInfo}}
                <label for="username" class="form-label">아이디</label>
                <input class="form-control" id="username" type="text" name="username" placeholder="id"
                       value="{{userInfo.username}}"/>
                {{#validMessage_username}}
                    <div class="form-text text-danger">{{validMessage_username}}</div>
                {{/validMessage_username}}
                <label for="password" class="form-label">비밀번호</label>
                <input class="form-control" id="password" type="text" name="password" placeholder="password"
                       value="{{userInfo.password}}"/>
                {{#validMessage_password}}
                    <div class="form-text text-danger">{{validMessage_password}}</div>
                {{/validMessage_password}}
            {{/userInfo}}
            {{^userInfo}}
                <label for="username" class="form-label">아이디</label>
                <input class="form-control" id="username" type="text" name="username" placeholder="id"/>
                <label for="password" class="form-label">비밀번호</label>
                <input class="form-control" id="password" type="text" name="password" placeholder="password"/>
            {{/userInfo}}
        </div>
        <div class="text-end">
            <input class="btn btn-primary" type="submit" value="join"/>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>